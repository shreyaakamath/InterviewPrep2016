package cracking.the.coding.interview;

public class Recursion {

	static int factorial(int n, int prod){
		if(n==0) return prod;
		prod = prod * n ;
		return factorial(n-1,prod);
	}
	
	public static void main(String[] args) {
		int prod=1;
		prod = factorial(3,prod);
		System.out.println(prod);
	}

}
