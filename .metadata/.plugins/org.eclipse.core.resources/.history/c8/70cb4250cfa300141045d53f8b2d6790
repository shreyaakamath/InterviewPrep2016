package sorting;

public class SortingImplemented {

	int[] a;
	
	public SortingImplemented(int[] val) {
	this.a=val;
	}
	
	public void insertionSort(){
		int key;
		for (int i =1; i< a.length; i++){
			key = a[i];
			int j=i-1;
			while (j>=0 && a[j] < key) {
				a[j+1] = a[j];
				j--;
			}
			a[j+1]=key;
		}
	}
	
	public int existsInArray(int val){
		//using binary search on sorted array
		insertionSort();
		int first = 0;
		int last = a.length -1;
		int mid = 0;
		boolean found = false;
		while (!found){
			mid = (last - first) /2 ; 
			if(val == a[mid]){found = true;}
			if(val < a[mid]) {last = mid-1; }
			else {first = mid+1;}
		}
		return mid ;
	}
	
	public void printArray(){
		for (int num : a) {
			System.out.print(num);
		}
	}
	
	
	public static void main(String[] args) {
		SortingImplemented obj = new SortingImplemented(new int[] {5,4,1,2});
		obj.insertionSort();
		obj.printArray();
		System.out.println("exists at index = "+obj.existsInArray(5));
	}

}
